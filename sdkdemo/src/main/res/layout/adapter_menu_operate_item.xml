<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="@dimen/dp_56"
    android:layout_height="wrap_content"
    android:minHeight="@dimen/dp_64"
    tools:ignore="MissingConstraints">

    <ImageView
        android:id="@+id/iv_icon"
        android:layout_width="@dimen/dp_24"
        android:layout_height="@dimen/dp_24"
        android:layout_marginTop="@dimen/dp_11"
        android:src="@drawable/edit_menu_freeze_frame"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <com.huawei.hms.videoeditor.ui.common.view.EditorTextView
        android:id="@+id/tv_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/dp_2"
        android:layout_marginTop="@dimen/dp_4"
        android:layout_marginEnd="@dimen/dp_2"
        android:layout_marginBottom="@dimen/dp_4"
        android:ellipsize="end"
        android:fontFamily="HarmonyHeiTi"
        android:gravity="top|center_horizontal"
        android:maxWidth="@dimen/dp_52"
        android:maxLines="2"
        android:text="@string/edit_item3"
        android:textColor="@color/color_text_first_level"
        android:textSize="@dimen/sp_10"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/iv_icon"
        tools:ignore="SpUsage" />

</androidx.constraintlayout.widget.ConstraintLayout>